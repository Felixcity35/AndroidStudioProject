<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    tools:context=".SliderActivity">




    <com.q42.android.scrollingimageview.ScrollingImageView
        android:layout_marginTop="20dp"
        android:id="@+id/scrolling_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        scrolling_image_view:speed="2dp"
        android:nestedScrollingEnabled="true"
        scrolling_image_view:src="@drawable/wasteim" />



    <com.q42.android.scrollingimageview.ScrollingImageView
        android:layout_marginTop="20dp"
        android:id="@+id/scrolling_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        scrolling_image_view:speed="2dp"
        android:nestedScrollingEnabled="true"
        scrolling_image_view:src="@drawable/wasteim" />


    <Button
        android:id="@+id/next"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_below="@+id/scrolling_third"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorPrimaryDark"
        android:text="stop"
        android:textColor="@color/gridcolor" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/next"
    android:layout_marginTop="50dp"
    >

<Button
    android:id="@+id/register"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Register"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/colorPrimaryDark"
    android:textColor="@android:color/white"
    />


    <Button
        android:id="@+id/login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        />


</LinearLayout>


</RelativeLayout>